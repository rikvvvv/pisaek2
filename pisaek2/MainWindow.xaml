<Window x:Class="pisaek2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pisaek2"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1050"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        >

    <UserControl Loaded="UserControl_Loaded">

    <Grid x:Name="Siatka">
            <Grid.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Margin" Value="1"/>
                </Style>
            </Grid.Resources>
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions/>
            <Label Name="Tekst" Foreground="White" Grid.ColumnSpan="10"/>
            <Rectangle Name="Kursor" Stroke="Violet" StrokeThickness="1"/>
        </Grid>
    </UserControl>
</Window>
